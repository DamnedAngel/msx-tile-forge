#!/usr/bin/make -f

%:
	dh $@ --with python3

# Override the clean step to prevent deletion of our pre-built 'dist' folder.
override_dh_auto_clean:

# Override the build step to do nothing, as 'make lin' already built the binary.
override_dh_auto_build:

# Override the install step to manually copy the pre-built files
# from the 'dist' directory into the Debian package structure.
override_dh_auto_install:
	# Create the target directory inside the package staging area
	install -d debian/msxtileforge/usr/local/bin/
	
	# Copy the contents of the PyInstaller output folder to the target directory
	install -t debian/msxtileforge/usr/local/bin/ -D -r dist/msxtileforge/*
